<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		tools:ignore="SpUsage"
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools">

	<View
			android:id="@+id/sep"
			android:layout_width="match_parent"
			android:layout_height="1px"
			android:background="@color/primaryDarkColor"/>

	<TextView
			android:id="@+id/tvPartOfSpeech"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/margin_standard"
			android:textSize="@dimen/txt_size_medium"
			android:textStyle="italic"
			tools:text="noun"/>

	<TextView
			android:id="@+id/tvDefinition"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/tvPartOfSpeech"
			android:layout_marginStart="@dimen/margin_standard"
			android:textColor="@color/primaryTextColor"
			android:textSize="@dimen/txt_size_medium"
			tools:text="some really long definitions. no, really really long definition"/>

	<TextView
			android:id="@+id/tvTypeOfLbl"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/tvDefinition"
			android:layout_marginTop="@dimen/margin_standard_half"
			android:text="@string/lbl_type_of"
			android:textSize="@dimen/txt_size_medium"
			android:textStyle="italic"
			android:visibility="gone"
			tools:visibility="visible"/>

	<TextView
			android:id="@+id/tvTypeOf"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/tvTypeOfLbl"
			android:layout_marginStart="@dimen/margin_standard"
			android:textColor="@color/primaryTextColor"
			android:textSize="@dimen/txt_size_medium"
			android:visibility="gone"
			tools:text="list of types"
			tools:visibility="visible"/>

	<TextView
			android:id="@+id/tvDerivationLbl"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/tvTypeOf"
			android:layout_marginTop="@dimen/margin_standard_half"
			android:text="@string/lbl_derivations"
			android:textSize="@dimen/txt_size_medium"
			android:textStyle="italic"
			android:visibility="gone"
			tools:visibility="visible"/>

	<TextView
			android:id="@+id/tvDerivation"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/tvDerivationLbl"
			android:layout_marginStart="@dimen/margin_standard"
			android:textColor="@color/primaryTextColor"
			android:textSize="@dimen/txt_size_medium"
			android:visibility="gone"
			tools:text="list of derivations"
			tools:visibility="visible"/>

</RelativeLayout>