<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_margin="@dimen/margin_standard_x2"
		android:orientation="vertical"
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools">

	<TextView
			android:id="@+id/tvWord"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentStart="true"
			android:layout_toStartOf="@+id/ivFavorite"
			android:textColor="@color/primaryDarkColor"
			android:textSize="@dimen/txt_size_large_x"
			tools:ignore="SpUsage"
			tools:text="@string/lbl_details"/>

	<ImageView
			android:id="@+id/ivFavorite"
			android:layout_width="@dimen/margin_standard_x3"
			android:layout_height="@dimen/margin_standard_x3"
			android:layout_alignBottom="@id/tvWord"
			android:layout_alignParentEnd="true"
			android:layout_alignTop="@id/tvWord"
			android:scaleType="fitCenter"
			android:src="@drawable/ic_star_border_yellow"
			android:visibility="gone"
			tools:visibility="visible"/>

	<TextView
			android:id="@+id/tvPronunciation"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentStart="true"
			android:layout_below="@id/tvWord"
			android:layout_toStartOf="@+id/ivFavorite"
			android:textColor="@color/design_default_color_primary"
			android:textSize="@dimen/txt_size_medium"
			android:visibility="gone"
			tools:ignore="SpUsage"
			tools:text="[pronunciation]"/>

	<LinearLayout
			android:id="@+id/llResultsContainer"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/tvPronunciation"
			android:layout_marginTop="@dimen/margin_standard"
			android:orientation="horizontal"/>

	<ProgressBar
			android:id="@+id/progressBar"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			style="?android:attr/progressBarStyle"/>

</RelativeLayout>