<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_graph"
            app:startDestination="@id/homeFragment">

	<fragment
			android:id="@+id/homeFragment"
			android:name="com.romanvytv.verbis.home.HomeFragment"
			android:label="@string/lbl_home"
			tools:layout="@layout/fragment_home">
		<action
				android:id="@+id/action_homeFragment_to_favoritesFragment"
				app:destination="@id/favoritesFragment"/>
		<action
				android:id="@+id/action_homeFragment_to_detailsFragment"
				app:destination="@id/detailsFragment"/>
		<action
				android:id="@+id/action_homeFragment_to_settingsFragment"
				app:destination="@id/settingsFragment"/>
		<action
				android:id="@+id/action_homeFragment_to_searchFragment"
				app:destination="@id/searchFragment"/>
	</fragment>

	<fragment
			android:id="@+id/favoritesFragment"
			android:name="com.romanvytv.verbis.favorites.FavoritesFragment"
			android:label="@string/lbl_favorites"
			tools:layout="@layout/fragment_favorites"/>

	<fragment
			android:id="@+id/settingsFragment"
			android:name="com.romanvytv.verbis.settings.SettingsFragment"
			android:label="@string/lbl_settings"/>

	<fragment
			android:id="@+id/todayFragment"
			android:name="com.romanvytv.verbis.today.TodayWordFragment"
			android:label="@string/lbl_today_word"/>
	<fragment
			android:id="@+id/searchFragment"
			android:name="com.romanvytv.verbis.search.SearchFragment"
			android:label="@string/lbl_search"/>

	<fragment
			android:id="@+id/detailsFragment"
			android:name="com.romanvytv.verbis.details.DetailsFragment"
			android:label="@string/lbl_details">
		<argument
				android:name="wordId"
				app:argType="long"
				android:defaultValue="-1L"/>
	</fragment>

</navigation>